<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/iv_voltar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/arrow_1"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:contentDescription="voltar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_desejacadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deseja Cadastrar:"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_voltar"
        android:layout_marginTop="25dp"/>

    <Button
        android:id="@+id/btn_caduser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#D9D9D9"
        android:hapticFeedbackEnabled="false"
        android:text="Cadastrar UsuÃ¡rio"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="80dp"
        style="@style/buttonMainStyle"
        android:textAllCaps="false"
        android:padding="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_desejacadastrar" />

    <Button
        android:id="@+id/btn_cadempresa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#D9D9D9"
        android:hapticFeedbackEnabled="false"
        android:text="Cadastrar Empresa"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        style="@style/buttonMainStyle"
        android:textAllCaps="false"
        android:padding="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_caduser" />
</androidx.constraintlayout.widget.ConstraintLayout>